<head runat="server">
  <title>Administration</title>
  <!-- meta tags -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width,initial-scale=1">

  <!-- favorites icon -->
	<link rel='shortcut icon' href='favicon.ico' type='image/x-icon'/>

  <!-- load style sheets -->
  <link rel="stylesheet" href="@Reference.Url(Reference.Directory.css, "style.css", "admin")" media="all" />

  <!-- load JavaScript -->
	<script type="text/javascript" src="@Core.Resources.Reference.Url(Core.Resources.Reference.Directory.js, "jquery.min.js", "jquery")"></script>
  <script type="text/javascript" src="@Core.Resources.Reference.Url(Core.Resources.Reference.Directory.js, "Loader.min.js", "lib")"></script>
  <script type="text/javascript" src="@Core.Resources.Reference.Url(Core.Resources.Reference.Directory.js, "Library.min.js", "lib")"></script>
  @RenderSection("HeadScripts", required: false)
</head>
<body>
    <div id="content">
        <div id="header">
            @if (Core.Helpers.Security.User.IsAuthenticated())
            {
                <div id="topBar">
                    <div id="topBarContent">
                        <span>Welcome @Core.Helpers.Security.User.GetInfo(Security.AuthenticatedUser.Info.Name)</span> |                        
                        <a href="@Url.Action("Logout", "Login")">Logout</a>
                    </div>
                </div>
            }
            <div id="headerContent">
                <span>Administration</span>
            </div>            
        </div>
        <div id="nav">
            <div id="navContent">
                @Html.Partial("~/areas/admin/views/shared/_Navigation.cshtml")
            </div>
        </div>       
        <div style="clear:both;"></div>
        <div id="pageContainer">
            <div id="pg">
            @RenderBody()
            </div>
        </div>
        <div id="footer">
            <div id="footerContent">
                <div class="poweredBy">
                    <a href="http://www.magnersanborn.com" targer="_blank">
                        <div><img src="@Core.Resources.Reference.Url(Core.Resources.Reference.Directory.images, "admin/footerLogo.png", "")" alt="Magner Sanborn" /></div>
                    </a>
                </div>
                <div class="copyrights">&copy; 2012 Magner Sanborn. All Rights Reserved.</div>
            </div>
        </div>
    </div>
    @RenderSection("BodyScripts", required: false)   
</body>
</html>

